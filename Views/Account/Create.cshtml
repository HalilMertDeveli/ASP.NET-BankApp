@model UserListModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
    <head>


    </head>

    <body>
        <div class="row">
            <div class="col-6 mt-4">
                <h3>Hesap Eklenecek kişi bilgileri</h3>

                <p>Kullanıcı adı: @Model.Name</p>

                <p>Kullanıcı soy adı : @Model.SurName</p>

            <p>Kullanıcı toplam Hesap Sayısı:<getAccountCount application-user-id="@Model.Id"></getAccountCount> </p>

            </div>

            <div class="col-6">
                <form method="post" asp-action="Create" asp-controller="Account">
                    <input type="hidden" name="ApplicationUserId" value="@Model.Id" />
                    <div class="mb-3">
                        <label class="from-label">Hesap Numarası</label>
                        <input type="number" name="AccountNumber" class="from-control"/>

                    </div>

                    <div class="mb-3">
                        <label class="form-label" >Bakiye:</label>
                        <input type="number" class="form-control" name="Balance"/>
                    </div>

                    <div class="mb-3">
                        <button class="btn btn-primary"> Kaydet </button>
                    </div>

                </form>
            </div>
        </div>

    </body>

</html>

